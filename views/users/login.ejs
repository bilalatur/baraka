  <body>
    <div class="container">
      <div class="row login-row col-12">
        <div class="col-5 login-div">
          <div class="nav-form">
            <ul class="nav nav-pills">
              <li class="nav-item-form">
                <a class="nav-link login-a" href="/users/login">Iniciar sesión</a>
              </li>
              <li class="nav-item">
                <a class="nav-link login-a-reg" href="/users/register">Registrarme</a>
              </li>
            </ul>
          </div>
          <form action="/users/login" method="POST" class="login-form col-12">
            <label for="email" class="col-12 label-login" name="email">Email<br><input class="login-form-input col-12" name="email" type="text"></label><br>
            <label for="password" class="col-12 label-login" name="password">Contraseña<br><input class="login-form-input col-12" name="password" type="password"></label>
